---
import Layout from "../../layouts/Layout.astro"
import { Navbar } from "../../components/automationagency/Navbar.jsx"
import { Footer } from "../../components/automationagency/Footer.jsx"
import { ScrollUpButton } from "../../components/automationagency/ScrollUpButton"
import "../../styles/Theme.css"
import "../../styles/Diagonals.css"

import { caseStudiesData } from "../../components/automationagency/CaseStudies.jsx";

export async function getStaticPaths() {
  return Object.keys(caseStudiesData).map((key) => ({
    params: { caseStudy: key },
  }));
}

const { caseStudy } = Astro.params;
const currentCaseStudy = caseStudiesData[caseStudy];
---

<Layout title="Relumify">
  <Navbar client:load />
  <section class="w-full flex justify-center pt-10 mt-16 mb-16 lg:mb-32 bg-customDarkBg2 relative">
    <div class="flex flex-col w-full lg:w-[1150px] justify-center">
      <div class="custom-block-subtitle text-center mb-6">
        {currentCaseStudy.title}
      </div>
      <div class="custom-block-medium-title text-center mb-16 px-8 sm:px-24 md:px-48">
        Detailed Overview of {currentCaseStudy.title}
      </div>
      <div class="custom-content-text-gray text-center mb-8">
        {currentCaseStudy.description}
      </div>

      <!-- Section 1: Image Left, Text Right -->
      <div class="flex flex-col lg:flex-row items-center mb-16">
        <img src={currentCaseStudy.image} alt={currentCaseStudy.title} class="w-full lg:w-1/2 rounded-lg mb-4 lg:mb-0" />
        <div class="lg:ml-8">
          <h2 class="text-xl font-bold mb-2">Section 1 Title</h2>
          <p class="text-gray-700">This is the content for section 1. It provides detailed information about the case study.</p>
        </div>
      </div>

      <!-- Section 2: Text Left, Image Right -->
      <div class="flex flex-col lg:flex-row items-center mb-16">
        <div class="lg:mr-8">
          <h2 class="text-xl font-bold mb-2">Section 2 Title</h2>
          <p class="text-gray-700">This is the content for section 2. It provides additional insights and details.</p>
        </div>
        <img src={currentCaseStudy.image} alt={currentCaseStudy.title} class="w-full lg:w-1/2 rounded-lg mb-4 lg:mb-0" />
      </div>

      <!-- Section 3: Image Left, Text Right -->
      <div class="flex flex-col lg:flex-row items-center mb-16">
        <img src={currentCaseStudy.image} alt={currentCaseStudy.title} class="w-full lg:w-1/2 rounded-lg mb-4 lg:mb-0" />
        <div class="lg:ml-8">
          <h2 class="text-xl font-bold mb-2">Section 3 Title</h2>
          <p class="text-gray-700">This is the content for section 3. It concludes the case study with final thoughts.</p>
        </div>
      </div>
    </div>
  </section>
  <Footer />
  <ScrollUpButton client:load />
</Layout>
